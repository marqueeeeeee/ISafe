<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aduhack.isafe.Activity.DetailsActivity">


    <fragment
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:id="@+id/map"
        tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/map"
        android:id="@+id/lable1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Incident"/>

    <TextView
        android:id="@+id/tv_incident"
        android:layout_below="@+id/lable1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Incident"/>


    <TextView
        android:layout_below="@+id/tv_incident"
        android:id="@+id/lable2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details"/>

    <TextView
        android:layout_below="@+id/lable2"
        android:id="@+id/tv_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details.................................."/>



</RelativeLayout>
